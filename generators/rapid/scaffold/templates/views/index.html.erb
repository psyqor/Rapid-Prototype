<%% model_class = <%= titleized_name %> %>
<%% content_for(:title){ "<%= plural_name.humanize %>"} %>

<table class="table table-striped">
  <thead>
    <tr>
      <% @attributes.each do |attribute| %>
        <th><%%= model_class.human_attribute_name(:<%= attribute.name %>) %></th>
      <% end %>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
      <tr>
        <% @attributes.each do |attribute| %>
        <td><%%= <%= singular_name %>.<%= attribute.name %> %></td>
        <% end %>
        <td>
          <%%= link_to 'View', <%= singular_name %>_path(<%= singular_name %>), :class => 'btn btn-mini' %>
          <%%= link_to 'Edit', edit_<%= singular_name %>_path(<%= singular_name %>), :class => 'btn btn-mini' %>
          <%%= link_to 'Delete',<%= singular_name %>_path(<%= singular_name %>),
                      :method => :delete,
                      :confirm => 'Are you sure?',
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>

<%%= link_to "New", new_<%= singular_name %>_path,
            :class => 'btn btn-primary' %>