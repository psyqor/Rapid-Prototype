<%%= form_for @<%= singular_name %>, :html => { :class => 'form-horizontal' } do |f| %>
 
 <%%= render :partial => "layouts/validation_errors", :locals => {:model => @<%= singular_name %> }%>

 
  <% @attributes.each do |attribute| %>
  <div class="control-group">
    <%%= f.label :<%= attribute.name %>, :class => 'control-label' %>
    <div class="controls">
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, :class => '<%= attribute.field_type %>' %>
    </div>
  </div>
  <% end %>

  <div class="form-actions">
    <%%= f.submit :class => 'btn btn-primary' %>
    <%%= link_to 'Cancel',<%= plural_name %>_path, :class => 'btn' %>
  </div>
<%% end %>